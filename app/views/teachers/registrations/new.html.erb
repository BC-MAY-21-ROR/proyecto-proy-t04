<div class="container">
  <div class="register-information">
    <div class="title">
      <h1>Teach our passion</h1>
    </div>
    
    <div class="description">
      <div clas="desc-info">
        <%= image_tag "marca-de-verificacion", class: "desc-img" %>
        
        <p class="info">Help students</p>
      
      </div>

      <div clas="desc-info">
        <%= image_tag "marca-de-verificacion", class: "desc-img" %>
        
        <p class="info">Review important topics</p>
      </div>

      <div clas="desc-info">
        <%= image_tag "marca-de-verificacion", class: "desc-img" %>
        
        <p class="info">Learn new ways to teach</p>
      </div>
    </div>
    
    <div class="img-teacher-singup-form">
      <%= image_tag "male-professor" %>
    </div>
  </div>

  <div class="form-teacher">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "teachers/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      
      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :lastname %><br />
        <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :about %><br />
        <%= f.text_field :about, autofocus: true, autocomplete: "about", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :tags %><br />
        <%= f.text_field :tags, autofocus: true, autocomplete: "tags", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :summary %><br />
        <%= f.text_field :summary, autofocus: true, autocomplete: "summary", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :object %><br />
        <%= f.text_field :object, autofocus: true, autocomplete: "object", class: "form-control" %>
      </div>

      <div class="actions btn-register">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  
  </div>
</div>
