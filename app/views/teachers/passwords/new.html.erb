<div class="password-container">
  <div>
    <h2>Forgot your password?</h2>
  </div>

  <div class="password-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "students/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary"  %>
    </div>
    <% end %>
    <div class="links">

      <div class="btn-sign-in">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up"  %><br />
      </div>

      <div class="btn-log-in">
        <%= link_to "Log in", new_session_path(resource_name), class: "log-in" %><br />
      </div>
      
    </div>
  </div>

</div>
